<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

<context-param>
  <!-- max size of the upload request -->
  <param-name>maxSize</param-name>
  <param-value>3145728</param-value>
</context-param>
<context-param>
  <!-- Useful in development mode to slow down the uploads in fast networks.
         Put the number of milliseconds to sleep in each block received in the server.
         false or 0, means don't use slow uploads  -->
  <param-name>slowUploads</param-name>
  <param-value>20</param-value>
</context-param>

<filter>
  <filter-name>DShopFilter</filter-name>
  <display-name>DShop Filter</display-name>
  <description>The Filter that intercepts lift calls and other shop app calss</description>
  <filter-class>net.liftweb.http.DShopFilter</filter-class>
</filter>
<filter-mapping>
  <filter-name>DShopFilter</filter-name>
  <url-pattern>/*</url-pattern>
</filter-mapping>

<servlet>
  <servlet-name>uploadServlet</servlet-name>
  <servlet-class>com.ding.servlet.ImageUploadServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>uploadServlet</servlet-name>
  <url-pattern>/gwtcall/servlet.gupld</url-pattern>
</servlet-mapping>

</web-app>
